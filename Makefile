# This Makefile generated by GoMakeGen 0.8.1 using next command:
# gomakegen --metalinter .

################################################################################

.DEFAULT_GOAL := help
.PHONY = fmt all clean deps deps-test test metalinter help

################################################################################

all: morpher-librato morpher-server ## Build all binaries

morpher-librato: ## Build morpher-librato binary
	go build morpher-librato.go

morpher-server: ## Build morpher-server binary
	go build morpher-server.go

install: ## Install binaries
	cp morpher-librato /usr/bin/morpher-librato
	cp morpher-server /usr/bin/morpher-server

uninstall: ## Uninstall binaries
	rm -f /usr/bin/morpher-librato
	rm -f /usr/bin/morpher-server

deps: ## Download dependencies
	git config --global http.https://pkg.re.followRedirects true
	go get -d -v github.com/orcaman/concurrent-map
	go get -d -v github.com/valyala/fasthttp
	go get -d -v pkg.re/essentialkaos/ek.v10
	go get -d -v pkg.re/essentialkaos/librato.v8

deps-test: ## Download dependencies for tests
	git config --global http.https://pkg.re.followRedirects true
	go get -d -v pkg.re/check.v1

test: ## Run tests
	go test -covermode=count ./refs

fmt: ## Format source code with gofmt
	find . -name "*.go" -exec gofmt -s -w {} \;

metalinter: ## Install and run gometalinter
	test -s $(GOPATH)/bin/gometalinter || (go get -u github.com/alecthomas/gometalinter ; $(GOPATH)/bin/gometalinter --install)
	$(GOPATH)/bin/gometalinter --deadline 30s

clean: ## Remove generated files
	rm -f morpher-librato
	rm -f morpher-server

help: ## Show this info
	@echo -e '\nSupported targets:\n'
	@grep -E '^[a-zA-Z_-]+:.*?## .*$$' $(MAKEFILE_LIST) \
		| awk 'BEGIN {FS = ":.*?## "}; {printf "  \033[33m%-12s\033[0m %s\n", $$1, $$2}'
	@echo -e ''

################################################################################
